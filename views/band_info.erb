<h1>Welcome to <%= @band.band_name %>'s Page</h1>


<h3>See all venues this band has played in:</h3>

<% if @venues.any? %>
<form action="/bands/<%= @band.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <% @venues.each do |venue| %>
  <div class="checkbox">
    <label>
      <input type="checkbox" name="venue_ids[]" value="<%= venue.id %>"><%= venue.venue_name %>
    </label>
  </div>
  <% end %>

  <button type="submit">Add venues</button>
</form>
<% end %>


<% if @band.venues.any? %>
<h3>Here are all the venues:</h3>

<ul>
  <% @band.venues.each do |venue| %>
  <li><%= venue.venue_name %></li>
  <% end %>
</ul>
<% else %>
<p>There are no venues yet!</p>
<% end %>

<a href="/bands/<%= @band.id %>/edit">Edit band</a>

